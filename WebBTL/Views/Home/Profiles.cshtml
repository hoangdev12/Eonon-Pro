@model WebBTL.Models.Customer

<h2>Profiles</h2>

<div>
    <img src="@Url.Content(Model.Avatar ?? "~/Content/images/avatarDefault.png")" alt="avatar" width="150" height="150" />
</div>

<form action="@Url.Action("UpdateProfile", "Profile")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FullName">Họ tên:</label>
        <input type="text" id="FullName" name="FullName" value="@Model.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="FullName">Họ tên:</label>
        <input type="text" id="FullName" name="FullName" value="@Model.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Phone">Số điện thoại:</label>
        <input type="text" id="Phone" name="Phone" value="@Model.Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Avatar">Avatar URL:</label>
        <input type="text" id="Avatar" name="Avatar" value="@Model.Avatar" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>