@model PagedList.IPagedList<WebBTL.Models.Product>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Product</h2>
    <form method="post" class="row">
        <form method="get" class="row">
            <div class="form-group mr-3">
                @Html.DropDownList("CategoryId", (SelectList)ViewData["DanhMuc"], "Chọn thể loại", new { @class = "custom-select", @style = "min-width: 180px; max-width: 30%", id = "CategoryId" })
            </div>
            <div class="form-group mr-3">
                @Html.DropDownList("TrangThai", (IEnumerable<SelectListItem>)ViewData["IsTrangThai"], "Chọn trạng thái", new { @class = "custom-select", @style = "min-width: 180px; max-width: 30%", id = "TrangThai" })
            </div>
            <div class="form-group mr-3">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by title" />
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lọc</button>
            </div>

        </form>
        <div class="d-flex justify-content-end">
            @Html.ActionLink("Create New", "Create",null, new {@class = "btn btn-primary"})
        </div>
    </form>
    
    <br />
    <table class="table">
        <tr>
            <th>
                Product ID
            </th>
            <th>
               Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Discount
            </th>
            <th>
                UnitsInStock
            </th>
            <th>
                Active
            </th>
            <th>
                Cat Name
            </th>
            <th class="text-center">#</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @String.Format("{0:N0} VND", item.Price)
                </td>

                <td>
                    @String.Format("{0:N0} VND", item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @if (item.UnitsInStock > 0)
                    {
                        <span class="badge badge-success">InStock</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">OutStock</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CatName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary" })

                </td>
            </tr>
        }
    </table>

    <div aria-label="Page navigation example">
        <ul class="pagination d-flex justify-content-end" style="margin-top: 20px;">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = 10, CategoryId = Request["CategoryId"], TrangThai = Request["TrangThai"] }),
                new PagedListRenderOptions
                {
                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                    DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                    LinkToPreviousPageFormat = "<button class='btn btn-secondary mr-3'>Previous</button>",
                    LinkToNextPageFormat = "<button class='btn btn-secondary ml-3'>Next</button>",
                })
        </ul>
    </div>

</div>